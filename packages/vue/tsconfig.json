{
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": "./src",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "outDir": "./dist/es",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.vue",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
